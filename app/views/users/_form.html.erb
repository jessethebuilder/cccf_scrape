<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div class="mb-3">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if user.new_record? %>
    <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  <% end %>

  <h3>Daily Emails</h3>
  <div class="mb-3 form-check">
    <%= form.check_box :send_new_bookings, checked: @user.send_new_bookings %>
    <%= form.label :send_new_bookings, 'Send Daily New Bookings Email' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
